<div class="row">     
    <div class="col-md-12">         
       {{#each viewData.data}}
        <h2>{{employee.firstName}} {{ employee.lastName}} - Employee: {{ employee.employeeNum}}</h2>         
        <hr />         
        <form method="post" action="/employee/update">      

        <!--<input type="hidden" name="employeeNum" value="1" /> -->
        <input type="hidden" name="employeeNum" value="{{employeeNum}}" />

        <fieldset>                 
            <legend>Personal Information</legend>                 
            <div class="row">                     
                <div class="col-md-6">                         
                    <div class="form-group">                             
                        <label for="firstName">First Name:</label>                             
                        <input class="form-control" id="firstName" name="firstName" type="text" value="{{ employee.firstName}}" />                         
                    </div>                     
                </div>                     
                <div class="col-md-6"> 
                    <div class="form-group">                             
                        <label for="lastName">Last Name:</label>                             
                        <input class="form-control" id="lastName" name="lastName" type="text" value="{{ employee.lastName}}" />                         
                    </div>                     
                </div>                 
            </div>    

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input name="email" class="form-control" id="email" type="email" value="{{employee.email}}">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="SSN">Social Security Num:</label>
                            <input name="SSN" class="form-control" id="SSN" type="text" value="{{employee.SSN}}"
                                readonly>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressStreet">Address (Street):</label>
                            <input name="addressStreet" class="form-control" id="addressStreet" type="text" value="{{employee.addressStreet}}">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label for="addressCity">Address (City):</label>
                        <input name="addressCity" class="form-control" id="addressCity" type="text" value="{{employee.addressCity}}">
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressState">Address (State):</label>
                            <input name="addressState" class="form-control" id="addressState" type="text" value="{{employee.addressState}}">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressPostal">Address (Zip Code):</label>
                            <input name="addressPostal" class="form-control" id="addressPostal" type="text" value="{{employee.addressPostal}}">
                        </div>
                    </div>
                </div>

        </fieldset>    

            <fieldset>
                <legend>Company Information</legend>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="isManager">Manager:</label>
                            {{#if employee.isManager}}
                            <input name="isManager" class="form-control" type="checkbox" checked>
                            {{else}}
                            <input name="isManager" class="form-control" type="checkbox">
                            {{/if}}
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="employeeManagerNum">Employee's Manager Number:</label>
                            <input name="employeeManagerNum" class="form-control" id="employeeManagerNum" type="text"
                                value="{{employee.employeeManagerNum}}">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Status:</label><br>
                            {{#equal employee.status 'Full Time'}}
                            <label class="checkbox-inline">
                                <input name="status" id="statusFT" type="radio" value="Full Time" checked> Full Time
                            </label>
                            <label class="checkbox-inline">
                                <input name="status" id="statusPT" type="radio" value="Part Time"> Part Time
                            </label>
                            {{/equal}}
                            {{#equal employee.status 'Part Time'}}
                            <label class="checkbox-inline">
                                <input name="status" id="statusFT" type="radio" value="Full Time"> Full Time
                            </label>
                            <label class="checkbox-inline">
                                <input name="status" id="statusPT" type="radio" value="Part Time" checked> Part Time
                            </label>
                            {{/equal}}
                            {{#unless employee.status}}

                            <label class="checkbox-inline">
                                <input name="status" id="statusFT" type="radio" value="Full Time"> Full Time
                            </label>
                            <label class="checkbox-inline">
                                <input name="status" id="statusPT" type="radio" value="Part Time"> Part Time
                            </label>
                                
                            {{/unless}}
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="department">Department</label>
                            {{#if viewData.departments}}
                            <select name="department" class="form-control" id="department">
                               
                                 <option value="">Select Department</option> 
                             {{#each viewData.departments}} 
                                  <option value="{{departmentId}}" {{#if selected}} selected {{/if}} >{{departmentName}} </option> 
                            {{/each}} 

                              </select> 

                            {{else}} 

                                 <div>No Departments</div> 

                            {{/if}} 

                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="hireDate">Hire Date</label>
                            <input name="hireDate" class="form-control" id="hireDate" type="text" value="{{employee.hireDate}}"
                                readonly>
                        </div>
                    </div>
                </div>
            </fieldset>

        <hr />             
        <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br /><br />         
        </form>     
    </div> 
</div> 